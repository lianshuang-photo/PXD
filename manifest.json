{
  "id": "com.pxd.panel",
  "name": "PXD",
  "version": "0.2.0",
  "manifestVersion": 6,
  "main": "index.html",
  "host": {
    "app": "PS",
    "minVersion": "24.0.0"
  },
  "entrypoints": [
    {
      "type": "panel",
      "id": "com.pxd.panel",
      "label": {
        "default": "PXD 控制台"
      },
      "panelDisplayName": {
        "default": "PXD 控制台"
      },
      "minimumSize": {
        "width": 320,
        "height": 400
      },
      "preferredDockedSize": {
        "width": 360,
        "height": 600
      },
      "preferredFloatingSize": {
        "width": 400,
        "height": 720
      },
      "maximumSize": {
        "width": 2000,
        "height": 2000
      },
      "icons": [
        {
          "width": 23,
          "height": 23,
          "path": "icons/dark-panel.png",
          "scale": [1, 2],
          "theme": ["dark", "darkest"],
          "species": ["chrome"]
        },
        {
          "width": 23,
          "height": 23,
          "path": "icons/light-panel.png",
          "scale": [1, 2],
          "theme": ["light", "lightest"],
          "species": ["chrome"]
        }
      ]
    }
  ],
  "requiredPermissions": {
    "localFileSystem": "fullAccess",
    "network": {
      "domains": "all"
    },
    "clipboard": "readAndWrite",
    "allowCodeGenerationFromStrings": true
  }
}
